<% content_for :left_bar do %>
<% end -%>
<h1><%= @room.name %></h1>
<%= form_for @order, url:{action: "create"} do |f| %>
	<%= f.hidden_field :room_id, value: @room.id %>
	<%= f.label :date %>
	<%= f.text_field :date %>
	<%= f.label :start_time %>
	<%= f.text_field :start_time %>
	<%= f.label :end_time %>
	<%= f.text_field :end_time %>
	<%= f.label :info %>
	<%= f.text_field :info %>
	<br>
	<%= f.submit "Go" ,class: "btn"%>
<% end %>
